<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/ITunesExplorer.Card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="8dp"
    android:clipChildren="true"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/media_item_imageview"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginHorizontal="8dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/media_item_name_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="2"
        android:maxLines="1"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="Sample Name" />

    <TextView
        android:id="@+id/media_item_date_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:maxLines="1"
        android:textSize="12sp"
        tools:text="05.06.2022" />

    <TextView
        android:id="@+id/media_item_price_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:background="@drawable/background_item_price"
        android:backgroundTint="@color/purple_200"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:maxLines="1"
        android:paddingHorizontal="12dp"
        android:paddingTop="6dp"
        android:paddingBottom="4dp"
        android:textColor="@color/black"
        android:textSize="12sp"
        tools:text="145.00â‚º" />

</LinearLayout>