<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home"
    app:startDestination="@id/searchFragment">

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.celiluysal.itunesexplorer.ui.home.search.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_searchFragment_to_detailFragment"
            app:destination="@id/detailFragment">
            <argument
                android:name="mediaItem"
                app:nullable="false"
                app:argType="com.celiluysal.itunesexplorer.data.model.responses.MediaItem"/>
        </action>
    </fragment>

    <fragment
        android:id="@+id/detailFragment"
        android:name="com.celiluysal.itunesexplorer.ui.home.detail.DetailFragment"
        android:label="DetailFragment">
        <argument
            android:name="mediaItem"
            app:nullable="false"
            app:argType="com.celiluysal.itunesexplorer.data.model.responses.MediaItem"/>
    </fragment>

</navigation>